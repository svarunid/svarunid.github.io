{
  "name": "@zhura/client",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm run dev:ts & pnpm run dev:site & pnpm run dev:tailwind",
    "dev:ts": "vite build --watch",
    "dev:site": "eleventy --serve",
    "dev:tailwind": "pnpm exec tailwindcss -i src/styles/input.css -o dist/styles/tailwind.css -w",
    "build": "pnpm run build:tailwind && pnpm run build:ts && pnpm run build:site",
    "build:ts": "vite build",
    "build:site": "ELEVENTY_ENV=production eleventy",
    "build:tailwind": "pnpm exec tailwindcss -i src/styles/input.css -o dist/styles/tailwind.css -m",
    "clean": "rm -rf dist"
  },
  "packageManager": "pnpm@10.20.0",
  "private": "true",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/cli": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "dependencies": {
    "lit": "^3.3.1"
  }
}
